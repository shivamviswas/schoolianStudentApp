<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abhishekbaari.schoolian3.feedUpload"
    android:background="#fff">

    <EditText
        android:id="@+id/postText1"
        android:layout_width="340dp"
        android:layout_height="106dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:hint="Write your query here.. "
        android:maxLength="250" />

    <ImageView
        android:id="@+id/postImage1"
        android:layout_width="340dp"
        android:layout_height="320dp"
        android:layout_below="@+id/postText1"
        android:layout_alignLeft="@+id/postText1"
        android:layout_alignStart="@+id/postText1"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_below="@+id/postImage1"
        android:layout_alignLeft="@+id/postText1"
        android:layout_alignRight="@+id/postText1"
        android:id="@+id/linearLayout">


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_delete"
            android:id="@+id/imageButton1"
            android:background="#fff"/>

        <Button
            android:id="@+id/postUp1"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@+id/imageButton1"
            android:layout_toRightOf="@+id/imageButton1"
            android:background="#fff"
            android:text="Post" />

        <Button
            android:id="@+id/choosIm1"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/postUp1"
            android:layout_alignBottom="@+id/postUp1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#fff"

            android:text="Image"
            />
    </RelativeLayout>

</RelativeLayout>

